<div class="row col-12 container-fluid display-flex justify-content-center align-center p-2">
        <div class="col-3 container-fluid">
            <aside class="col-12 p-3 container-fluid rounded-3 bg-grey-500 border border-warning justify-content-start">
                <form>
                  <div class="mb-3">
                      <label for="exampleFormControlTextarea1" class="form-label">Start a Conversation</label>
                      <textarea class="form-control" id="conversationStarter" rows="3" placeholder="Type here"></textarea>
                  </div>
                  <div class="d-flex dropdown justify-content-center">
                    <select class="form-select form-select-lg mb-3 text-grey-500" aria-label=".form-select-lg example">
                      <option selected>Select a topic</option>
                      {{#each topicList as |topic|}}
                      {{> topicPart topo=topic}}
                      {{/each}}
                    </select>
                    <button type="button" class="btn btn-outline-warning">Submit</button>
                  </div>
                </form>
                <div>
                  
                </div>
            </aside>
        </div>
        <div class="col-9 container-fluid justify-content-center">
            {{#each convos as |conversation|}}
            {{> conversationPart conver2=conversation}}
            {{/each}}
        </div>
    </div>

