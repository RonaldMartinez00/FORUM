<div class="col">
  <div class="col-12 m-auto d-flex justify-content-center">
    <h2>Welcome, {{user.username}}!</h2>
  </div>

  <div class="col-10 m-auto d-flex justify-content-center">
    <div class="col d-flex container rounded border border-warning bg-grey-500 p-1 m-1 justify-content-center">
      <h3>Start a Conversation:</h3>

      <form class="form new-convo-form">
        <div class="form-group">
          <textarea class="form-control rounded" type="text" id="convo-body" name="convo-body" rows="3"></textarea>
          <label for="project-funding">Choose a Topic:</label>
          <input class="form-input rounded" type="number" id="convo-topic" name="convo-topic">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-warning">Submit</button>
        </div>
      </form>
    </div>

    {{#if user.length}}
    <div class="col-md-6 project-list">
      <h3>Your Conversations and Comments:</h3>

      {{#each projects as |project|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="./js/profile.js"></script>