<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Start a Conversation:</h3>

    <form class="form new-convo-form">
      <div class="form-group">
        <input class="form-input" type="text" id="convo-body" name="convo-body" />
        <label for="dog-names">Which topic best fits your conversation?:</label>
        <select name="topics" id="topics-list">
           {{#each topicList as |topic|}}
            {{> topicPart topo=topic}}
            {{/each}}
          <option class="dropdown-item" id="newTopic">+ Add a Topic</option>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  {{#if user}}
  <div class="col-md-6 project-list">
    <h3>Your Conversations:</h3>
    {{#each user.conversations as |conversation|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href=/conversation/{{conversation.id}}>{{conversation.body}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>